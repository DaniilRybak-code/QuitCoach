{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "stats": {
          ".read": "auth != null"
        },
        "profile": {
          ".read": "$uid === auth.uid",
          "quitDate": {
            ".read": "auth != null"
          },
          "relapseDate": {
            ".read": "auth != null"
          }
        },
        "cravings": {
          ".read": "auth != null"
        }
      }
    },
    "matchingPool": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "buddyPairs": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "healthchecks": {
      ".read": false,
      ".write": false
    },
    ".read": false,
    ".write": false
  }
}